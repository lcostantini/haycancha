<!DOCTYPE html>
<html>
<head>
  <title>Futbol</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
      </button>
      <% if user_signed_in? %>
          <%= link_to "Home", users_home_welcome_path, class: "navbar-brand" %>
      <% else %>
          <%= link_to "Home", root_path, class: "navbar-brand" %>
      <% end %>
    </div>
    <div class="navbar-collapse collapse">
      <form class="navbar-form navbar-right" role="form">
        <% if user_signed_in? %>
            <%= link_to "Notification", users_notifications_path, class: "btn btn-danger" %>
            Signed in as <%= current_user.email %>. Not you? |
            <%= link_to "Sign out", destroy_user_session_path, method: :delete, class: "btn btn-danger" %>
        <% else %>
            <%= link_to "Sign in", new_user_session_path, class: "btn btn-success" %>
            <%= link_to "Sign up", new_user_registration_path, class: "btn btn-primary" %>
        <% end %>
      </form>
    </div><!--/.navbar-collapse -->
  </div>
</div>

<div class="container">
  <%= yield %>
</div>

</body>
</html>
