<div class="starter-template"><h1>Welcome <%= current_user.email %></h1></div>
<div class="row clearfix">
  <div class="col-md-6 column">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title text-center">Teams <i><%= link_to '', new_users_team_path, class: 'fa fa-plus-square', title: 'Create a new team', rel: 'tooltip' %></i></h3>
      </div>
      <table class="table">
        <%= render 'users/teams/teams' %>
      </table>
    </div>
    <div class="row clearfix">
      <div class="col-md-12 column">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title text-center">Your stats</h3>
          </div>
          <div class="panel-body">
            <div class="row clearfix">
              <div class="col-md-4">
                <%= image_tag('green-circle.png', class: 'stats') %>
                <h4>Shots on goal 70%</h4>
              </div>
              <div class="col-md-4">
                <%= image_tag('yellow-circle.png', class: 'stats') %>
                <h4>Goals scored 65%</h4>
              </div>
              <div class="col-md-4">
                <%= image_tag('red-circle.png', class: 'stats') %>
                <h4>Goal assists 22%</h4>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-6 column">
    <div class="row clearfix">
      <div class="col-md-12 column">
        <% unless current_user.notifications_waiting.empty? %>
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title text-center">Invitations <i><%= link_to '', users_notifications_path, class: 'fa fa-search-plus', title: 'Show all the invitations and events', rel: 'tooltip' %></i></h3>
            </div>
            <table class="table">
              <%= render 'users/notifications/welcome_notifications' %>
            </table>
          </div>
        <% end %>
      </div>
    </div>
    <div class="row clearfix">
      <div class="col-md-12 column">
        <div class="panel panel-info">
          <div class="panel-heading">
            <h3 class="panel-title text-center">Events <i><%= link_to '', users_notifications_path, class:'fa fa-search-plus', title: 'Show all the invitations and events', rel: 'tooltip' %></i></h3>
          </div>
          <table class="table">
            <%= render 'users/responses/welcome_responses' %>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
