<%= form_for([:users, @notification], :html => {:class => "form-newfield"}) do |f| %>
  <div class="field">
    <%= f.text_field :email, :placeholder => "Email", :class => "form-control" %>
  </div>
  <%= f.hidden_field :team_id %>
  <%= f.hidden_field :state, :value => :waiting %>
  <div class="actions">
    <%= f.submit "Add Player", :class => "btn btn-lg btn-primary btn-block" %>
  </div>
<% end %>
