<% notifications.each do |notification| %>
  <tr class="text-center">
    <td><%= notification.team.name %></td>
    <td><%= notification.state %></td>
    <% if notification.waiting? %>
      <td><%= link_to '', users_notification_accept_path(notification), method: :post, class: "fa fa-check" %></td>
      <td><%= link_to '', users_notification_cancel_path(notification), method: :post, class: "fa fa-times" %></td>
    <% end %>
  </tr>
<% end %>