<br><br><h1 class="text-center">Teams invitations</h1><br>
<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Team name</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @notifications.each do |notification| %>
        <tr>
          <td><%= notification.team.name %></td>
          <td><%= link_to 'Acept', users_notification_accept_path(notification), method: :post, class: "btn btn-xs btn-info" %></td>
          <td><%= link_to 'Cancel', users_notification_cancel_path(notification), method: :post, class: "btn btn-xs btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
</div>

<%= render 'users/responses/index' %>
