<h1 class="sub-header">Listing teams</h1>
<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @teams.each do |team| %>
        <tr>
          <td><%= team.name %></td>
          <td><%= link_to 'Add Players', new_users_team_notification_path(team), class: "btn btn-xs btn-success" %></td>
          <td><%= link_to 'Show', users_team_path(team), class: "btn btn-xs btn-info" %></td>
          <td><%= link_to 'Edit', edit_users_team_path(team), class: "btn btn-xs btn-warning" %></td>
          <td><%= link_to 'Destroy', users_team_path(team), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to 'New Team', new_users_team_path, class: "btn btn-success" %>
</div>