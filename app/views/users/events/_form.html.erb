<%= form_for([:users, :team, @event], :html => {:class => "form-newfield"}) do |f| %>
  <%= f.hidden_field :team_id %>
  <div class="field">
    <%= f.text_field :name, :placeholder => "Name", :class => "form-control" %>
  </div> <br>
  <div class="field">
    <%= f.datetime_select :created_for, :placeholder => "Date and Time", :class => "form-control" %>
  </div> <br>
  <div class="actions">
    <%= f.submit "Reserved", :class => "btn btn-lg btn-primary btn-block" %>
  </div>
<% end %>
