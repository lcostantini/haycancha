<br><br><h1 class="text-center">Events invitations</h1><br>
<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Date and Time</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% current_user.user_responses.each do |response| %>
        <tr>
          <td><%= response.event.name %></td>
          <td><%= response.event.created_for %></td>
          <td><%= link_to 'Acept', users_response_accept_path(response), method: :post, class: "btn btn-xs btn-info" %></td>
          <td><%= link_to 'Cancel', users_response_cancel_path(response), method: :post, class: "btn btn-xs btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
</div>

<br><br><%= link_to 'Back', users_teams_path, class: "btn btn-default" %>