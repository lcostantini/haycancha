<div class="row marketing">
  <div class="col-lg-6"><br><br>
    <%= form_for(resource, as: resource, url: session_path(resource), :html => {:class => "form-signin"}) do |f| %>
      <%= devise_error_messages! %>
      <h1>Sign in</h1>
      <div><%= f.email_field :email, autofocus: true, :placeholder => "Email", :class => "form-control" %></div> <br>
      <div><%= f.password_field :password, autocomplete: "off", :placeholder => "Password", :class => "form-control" %></div>
      <div><%= f.submit "Sign in", :class => "btn btn-lg btn-primary btn-block" %></div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
  <div class="col-lg-6"><br><br>
    <%= render 'devise/registrations/form' %>
  </div>
</div>