<br><br><br><div class="text-center"><h2>Forgot your password?</h2></div>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, :class => "form-signin" }) do |f| %>
  <%= devise_error_messages! %>
  <div><%= f.email_field :email, autofocus: true, :placeholder => "Email", :class => "form-control" %></div> <br>
  <div><%= f.submit "Reset password", :class => "btn btn-lg btn-primary btn-block" %></div>
  <br><br><%= link_to 'Back', new_user_session_path, class: "btn btn-default" %>
<% end %>
<%= render "devise/shared/links" %>
